<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="rootContainer" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.scenes.HomeSceneController">
    <children>
        <AnchorPane fx:id="gamePane" maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" StackPane.alignment="CENTER">
            <children>
            
                <ImageView fitHeight="720.0" fitWidth="1280.0" layoutX="0.0" layoutY="0.0">
                    <image>
                        <Image url="@../images/home_scene.png" />
                    </image>
                </ImageView>
                
                <ImageView fx:id="nameGame" fitHeight="220.0" fitWidth="670.0" layoutX="321.0" layoutY="102.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <Button layoutX="459.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleStartButtonAction" prefHeight="64.0" prefWidth="400.0" style="-fx-font-size: 32;" stylesheets="@../fonts/GameStyle.css" text="Start">
               <styleClass>
                  <String fx:value="label-container" />
                  <String fx:value="text-label" />
                  <String fx:value="game-button" />
                  <String fx:value="movingup-label" />
               </styleClass>
                </Button>
                <Button layoutX="456.0" layoutY="500.0" mnemonicParsing="false" onAction="#showInstruction" prefHeight="64.0" prefWidth="400.0" style="-fx-font-size: 32;" stylesheets="@../fonts/GameStyle.css" text="Instruction">
               <styleClass>
                  <String fx:value="label-container" />
                  <String fx:value="text-label" />
                  <String fx:value="game-button" />
                  <String fx:value="movingup-label" />
               </styleClass>
                </Button>
                <Button layoutX="459.0" layoutY="410.0" mnemonicParsing="false" onAction="#Setting" prefHeight="64.0" prefWidth="400.0" style="-fx-font-size: 32;" stylesheets="@../fonts/GameStyle.css" text="Setting">
                    <styleClass>
                        <String fx:value="text-label" />
                        <String fx:value="label-container" />
                  <String fx:value="game-button" />
                  <String fx:value="movingup-label" />
                    </styleClass>
                </Button>
            <Button layoutX="1165.0" layoutY="651.0" mnemonicParsing="false" onAction="#changeSkin" stylesheets="@../fonts/GameStyle.css" text="Skin Ball">
               <styleClass>
                  <String fx:value="text-label" />
                  <String fx:value="game-button" />
                  <String fx:value="label-container" />
               </styleClass>
            </Button>
            <Button layoutX="459.0" layoutY="590.0" mnemonicParsing="false" onAction="#Quit" prefHeight="64.0" prefWidth="400.0" style="-fx-font-size: 32;" stylesheets="@../fonts/GameStyle.css" text="Quit">
               <styleClass>
                  <String fx:value="label-container" />
                  <String fx:value="text-label" />
                  <String fx:value="game-button" />
                  <String fx:value="movingup-label" />
               </styleClass>
            </Button>
            <ImageView fitHeight="25.0" fitWidth="26.0" layoutX="39.0" layoutY="667.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/steamlogo.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="25.0" fitWidth="109.0" layoutX="79.0" layoutY="667.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/google%20play.png" />
               </image>
            </ImageView>
            </children>
        </AnchorPane>
    </children>
</StackPane>
